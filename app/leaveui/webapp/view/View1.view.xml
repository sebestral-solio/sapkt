<mvc:View controllerName="leaveui.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <content>

    <Table id="requeststable" items="{/LeaveRequests}">
    <columns>
    <Column
				width="12em">
				<Text text="ID" />
			</Column>
            <Column
				width="12em">
				<Text text="employee_ID" />
			</Column>
            <Column
				width="12em">
				<Text text="Start Date" />
			</Column>
            <Column
				width="12em">
				<Text text="End Date" />
			</Column>
            <Column
				width="12em">
				<Text text="Reason" />
			</Column>
            <Column
				width="12em">
				<Text text="Status" />
			</Column>
            <Column
				width="12em">
				<Text text="Type" />
			</Column>
        </columns>
        <items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text text="{ID}" />
                    <Text text="{employee_ID}" />
                    <Text text="{startDate}" />
                    <Text text="{endDate}" />
                    <Text text="{reason}" />
                    <Text text="{status_code}" />
                    <Text text="{type_code}" />
				</cells>
			</ColumnListItem>
		</items>
    </Table>
    </content>
    </Page>
</mvc:View>